<% if contact.errors.any? %>
  <div class="errors">
    <ul>
    <% contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @contact do |f| %>
  <div class="field">
    <label class="required">担当者名(名前)</label>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <label class="required">法人名</label>
    <%= f.text_field :corporation %>
  </div>

  <div class="field">
    <label>連絡先番号</label>
    <%= f.text_field :tel %>
  </div>

  <div class="field">
    <label class="required">メールアドレス</label>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <label>質問項目</label>
    <ul class="categories">
    <%= collection_check_boxes(:contact, :category_ids, Category.all, :id, :name) do |b| %>
      <li><%= b.label { b.check_box + b.text } %></li>
    <% end %>
    </ul>
  </div>

  <div class="field">
    <label class="required">お問い合わせ内容</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit '確認', name: 'confirm'  %>
  </div>
<% end %>
