<% provide(:title, "#{@article.title} | お知らせ | メリエックス株式会社") %>
        <% provide(:keywords, 'オフィス清掃,ビル清掃,マンション清掃,クリニック清掃,介護福祉施設清掃,ハウスクリーニング,お知らせ') %>
        <% provide(:h1, 'オフィス清掃 ビル・マンション清掃 クリニック・介護施設清掃 ハウスクリーニング のメリエックス株式会社') %>

        <main class="container news">
            <nav class="breadcrumbs">
                <ol>
                    <li><%= link_to 'トップ', root_path %></li>
                    <li><%= link_to 'お知らせ', news_path %></li>
                    <li><%= link_to @article.title, article_path(@article) %></li>
                </ol>
            </nav>
            <article>
                <h1><%= @article.title %></h1>
                <time datetime="<%= @article.created_at %>">投稿日: <%= l @article.created_at %></time>
                <%= simple_format(@article.body) %>
            </article>
        </main>
